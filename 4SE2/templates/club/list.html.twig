<h1>La liste des formations</h1>
<h3>Le nombre de formations est {{f|length}}</h3>
<table border="2">
<tr>
  <th>Référence</th>
  <th>Titre</th>
  <th>Description</th>
  <th>NombreP</th>
</tr>
<tr>
  {% for i in f %}
  {% if 'theorique' in i.Description %}
  <td>{{i.ref}}</td>
  <td>{{i.Titre|upper}}</td>
  <td>{{i.Description}}</td>
  <td>{{i.nb_participants}}</td>
</tr>
{% endif %}
{% endfor %}

</table>