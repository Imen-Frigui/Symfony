<h1>La liste des formations</h1>
Le nombre de formation est {{f|length}}
{% set a=0 %}
{%for m in f %}
{%set a=max(m.nb_participants,a) %}
{% endfor %}

<table border="2">
<tr>
  <td>Ref</td>
  <td>Titre</td>
  <td>Description</td>
  <td>NbrP</td>
</tr>
{% for i in f %}
{#{% if 'theorique' in i.Description %}#}
{% if a==i.nb_participants %}
<tr>
  <td>{{i.ref}}</td>
  <td>{{i.Titre|upper}}</td>
  <td>{{i.Description}}</td>
  <td>{{i.nb_participants}}</td>
{% endif %}
  {#{% endif %}#}
  {% endfor %}
</tr>
</table>