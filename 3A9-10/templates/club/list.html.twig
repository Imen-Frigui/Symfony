<h1>La liste des formations </h1>
<h3>Le nombre de formations est {{f|length}}</h3>
{# calcul max #}
{% set maxV=0 %}
{% for k in f %}
{% set maxV=max(maxV,k.nb_participants) %}
{%endfor%}
{# calcul participants #}
{%set s=0 %}
{% for j in f%}
{%set s = s+j.nb_participants%}
{%endfor%}

<table border="1">
    <tr>
        <th>Réfénrece</th>
        <th>Titre</th>
        <th>Description</th>
        <th>NombreP</th>
    </tr>
    {% for i in f %}
    {#{% if i.Description=='formation theorique' %}#}
    {#{% if 'theorique' in i.Description %}#}
    {% if i.nb_participants==maxV %}
    <tr>
        <td>{{i.ref}}</td>
        <td>{{i.Titre|upper}}</td>
        <td>{{i.Description}}</td>
        <td>{{i.nb_participants}}</td>
    </tr>
    {%endif%}
    {#{% endif %}#}
    {% endfor %}
</table>
<h3>Le nombre de particpants est {{s}}</h3>

